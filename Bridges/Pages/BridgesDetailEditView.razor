@page "/bridgesdetaileditview/{action}/{id:int?}"

@inject IBridgesService bridgesService;
@inject ICoordsService coordsService;

@using BridgesDomain.Model
@using BridgesService.Interfaces

@{
    Bridge bridge = null;

    bridge = Action.ToLowerInvariant() == "add" ? new Bridge() : bridgesService.GetBridgeById(Id);

    if (bridge != null)
    {
        <br/>
        <table>
            <thead>
             <h6>
                <th colspan="2">@bridge.Name</th>
            </h6>
            </thead>
            <tr>
                <td style="width: 40%;">
                    <img id="imgBridge" alt="No image" height="600px" width="800px" src="Images/Original/@bridge.Filename" />
                </td>
                <td>
                    <table>
                        <tr>
                            <td><label>Id</label></td>
                            <td><input type="text" readonly="true" id="inputId" name="id" value="@bridge.Id"/></td>
                        </tr>
                        <tr>
                            <td><label>Name</label></td>
                            <td><input type="text" id="inputName" name="name" value="@bridge.Name" /></td>
                        </tr>
                        <tr>
                            <td><label>File to upload</label></td>
                            <td>
                                <input type="file" id="fileToUpload"><br />
                                <input type="button" id="btnfileToUpload" value="Upload" onclick="UploadFile(fileToUpload.files[0]);";>
                                <br />
                            </td>
                        </tr>
                        <tr>
                            <td><label>Filename</label></td>
                            <td><input type="text" readonly="true" id="inputFilename" name="filename" value="@bridge.Filename"/></td>
                        </tr>
                        <tr>
                            <td><label>Description</label></td>
                            <td><textarea id="inputDesc">@bridge.Description</textarea></td>
                        </tr>
                        <tr>
                            <td><label>Lat</label></td>
                            <td><input type="text" id="inputLat" name="lat" value="@bridge.Lat.ToString("#.######")"/></td>
                        </tr>
                        <tr>
                            <td><label>Lng</label></td>
                            <td><input type="text" id="inputLng" name="lng" value="@bridge.Lng.ToString("#.######")"/></td>
                        </tr>
                        <tr>
                            <td><label>Distance To Mouth (Km)</label></td>
                            <td><input type="text" readonly="true" id="distToMouthId" name="distToMouth" value="@coordsService.DistanceBetween(bridge.Lat, bridge.Lng, bridge.River.MouthLat, bridge.River.MouthLng).ToString("#.##")"/></td>
                        </tr>
                        <tr>
                            <td><label>Distance To Source (Km)</label></td>
                            <td><input type="text" readonly="true" id="distToSourceId" name="distToMouth" value=@coordsService.DistanceBetween(bridge.Lat, bridge.Lng, bridge.River.SourceLat, bridge.River.SourceLng).ToString("#.##")/></td>
                        </tr>
                        <tr>
                            <td><label>Zoom</label></td>
                            <td><input type="text" id="inputZoom" name="zoom" value="@bridge.Zoom.ToString("#.##")" /></td>
                        </tr>
                        <tr>
                            <td><label>Height</label></td>
                            <td><input type="text" id="inputHeight" name="height" value="@bridge.Height.ToString("#.##")" /></td>
                        </tr>
                        <tfoot>
                        <th colspan="2" style="text-align: right;">
                            <input type="button" id="btnUpdate" value="Update"
                                   onclick="UpdateBridge(
                                                inputId.value,
                                                inputName.value,
                                                inputFilename.value,
                                                inputDesc.value,
                                                inputLat.value,
                                                inputLng.value,
                                                inputZoom.value,
                                                inputHeight.value,
                                                fileToUpload);" />
                            <input type="button" id="btnDelete" value="Delete"
                                   onclick="DeleteBridge(inputId.value);"
                                   style="background-color: red;" />
                        </th>
                        </tfoot>
                    </table>
                </td>
            </tr>
        </table>
    }
    else
    {
        <p>No bridge found for bridge with Id: @Id</p>
    }
}

@code
{
    [Parameter]
    public string Action { get; set; }

    [Parameter]
    public int Id { get; set; }
}
