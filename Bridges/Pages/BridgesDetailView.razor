@page "/bridgesdetailview/{name}"

@using Bridges.Services;
@using Bridges.Models

@{
    Bridge bridge = new BridgesService().GetBridges.FirstOrDefault(x => x.Name == Name);

    if(bridge != null)
    { 
        <table>
            <tr colspan="2">
                <td>
                    <h2>@bridge.Name</h2>
                </td>
            </tr>
            <tr>
                <td>
                    <img title="@bridge.Name" alt="No image" height="600" width="800" src="Images/Original/@bridge.Filename"/>
                </td>
                <td>
                    <h4>Description</h4>
                    <hr/>
                    <p>@bridge.Description</p>
                </td>
            </tr>
        </table>
    }
    else
    {
    <p>No bridge found for Name: @Name</p>
    }
}

@code
{
    [Parameter]
    public string Name { get; set; }
}